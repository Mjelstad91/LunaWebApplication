<!DOCTYPE html>
<html lang="en">

<!--Layoutpage contains the navigationbar and the link to the login/register modal-->
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width = device-width, initial-scale=1">
    <link rel="icon" type="image/png" href="favicon-32x32.png" sizes="32x32" />
    <title>Lunaflick</title>

    <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="/Content/styles.css">
    <link href="https://fonts.googleapis.com/css?family=Roboto:100,300,400" rel="stylesheet">
   
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>

</head>

<body>
    <div>
        <nav class="navbar navbar-inverse">
            <div class="container">
                <div class="navbar-header">
                    <a id="nav-header" class="navbar-brand" href="/Home/Index">Lunaflicks</a>
                </div>
                
                <ul class="nav navbar-right navbar-nav">

                    @if (Session["User"] == null)
                    {
                        <li class="nav navbar-right navbar-nav" id="login-link" data-toggle="modal" data-target="#loginModal">
                            <a href="#">Logg inn</a>
                        </li>
                    }
                    else
                    {
                        <li class="cart-link nav nav-bar" id="cartLink" data-toggle="modal" data-target="#cartModal">
                            <a href="#">
                           
                                <span class="glyphicon glyphicon-shopping-cart"></span> Handlevogn
                            </a>
                        </li>
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                <span class="glyphicon glyphicon-user"></span> @Session["User"].ToString()
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li><a href="/Home/MySite">Min side</a></li>
                                <li><a href="/Home/Logout">Logg ut</a></li>
                            </ul>
                        </li>

                    }
                </ul>
            </div>
        </nav>
        
        <div class="container body-content">
            <h3 class="register-msg">@TempData["msg"]</h3>
			<h3 class="register-msg">@TempData["deactivated"]</h3>
            @RenderBody()
        </div>

        <!-- Modal for login -->
        @{
            Html.RenderAction("Cart");
            Html.RenderAction("Checkout");
        }

    </div>


</body>


</html>